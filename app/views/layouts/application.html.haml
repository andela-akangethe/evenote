!!!
%html
%head
    %title Evenote | Your life's work
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %body
        %div.navbar.navbar-inverse
            %div.container
                %div.navbar-header
                    %button.navbar-toggle{:data => {:toggle => 'collapse', :target => '.navbar-inverse-collapse'}}
                        %span.icon-bar
                        %span.icon-bar
                        %span.icon-bar
                    = link_to 'Evenote', root_path, class: 'navbar-brand logo'
                %div.navbar-collapse.collapse.navbar-inverse-collapse
                    %ul.nav.navbar-nav.navbar-right
                        - if user_signed_in?
                            %li
                                = link_to 'View Docs', docs_path
                            %li
                                = link_to 'Create Doc', new_doc_path
                            %li
                                = link_to 'Sign Out', destroy_user_session_path, method: :delete
                        - else
                            %li
                                = link_to 'Sign In', new_user_session_path
                            %li
                                = link_to 'Sign Up', new_user_registration_path
                %p= notice
                %p= alert
    = yield

:javascript
    $(document).ready(function() {
        // This command is used to initialize some elements and make them work properly
        $.material.init();
    });
