.container
    %h1= @doc.title
    %p= @doc.content
    .tags-info
        = link_to 'All Docs', docs_path, class: 'tags'
        = link_to 'Fix Doc', edit_doc_path(@doc), class: 'tags'
        = link_to 'Trash It', doc_path(@doc), method: :delete, data: { confirm: 'Are you sure?'}, class: 'tags'
        