.container
    .row
        .col-lg-12.col-md-12
            = form_for @doc do |f|
                .form-group
                    .col-sm-10
                        = f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Title'
                .form-group
                    .col-sm-10
                        = f.text_area :content, autofocus: true, class: 'form-control form-padding', placeholder: 'Content'
                .form-group
                    .col-sm-10
                        = f.submit 'Add Doc', class: 'btn btn-lg btn-raised btn-primary btn-color btn-padding'
